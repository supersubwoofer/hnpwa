{   
  "include": [
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "jsx": "react",
    "lib": [
      "dom",
      "es2017", 
      "webworker.importscripts"
    ],
    "outDir": "build/scripts"
  }
}